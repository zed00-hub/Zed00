rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check admin status
    function isAdmin() {
      return request.auth != null && request.auth.token.email.lower() == 'ziadgaid.ergo@gmail.com';
    }

    // 1. Users Collection (includes analytics data on user doc)
    match /users/{userId} {
      // Owner: read/write own data
      allow create, update, get: if request.auth != null && request.auth.uid == userId;
      
      // Admin: read list of users for analytics dashboard
      allow list, read: if isAdmin();

      // 2. Chat Sessions Subcollection
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // 3. Quizzes Subcollection
      match /quizzes/{quizId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 4. Shared Courses Collection
    match /shared_courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // 5. Bot Knowledge Collection (New Feature)
    match /bot_knowledge/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
