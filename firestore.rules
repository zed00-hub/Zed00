rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows any authenticated user to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own chat sessions
    match /chats/{chatId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow admins to read all stats, users can only read their own (handled by component logic, but rules strictly...)
    // For now, let's keep analytics open for admin functionality or specific user
    match /analytics/{docId} {
       allow read, write: if request.auth != null; 
    }
    
    // Bot Knowledge Base
    // Read: Allowed for everyone (or at least authenticated users) so the bot can answer
    // Write: Only Admins (This logic is handled by UI mainly, but ideally we check admin claim)
    match /bot_knowledge/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Ideally restrict to admin email
    }

    // Courses
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default safe rule (deny all else)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
