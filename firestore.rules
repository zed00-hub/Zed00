rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email.lower() == 'ziadgaid.ergo@gmail.com';
    }

    function isSupervisor() {
      return request.auth != null && (
        request.auth.token.email.lower() == 'ziadgaid.ergo@gmail.com' || 
        request.auth.token.email.lower() == 'abdderrahim7676@gmail.com'
      );
    }
    
    match /{path=**}/notifications/{notificationId} { allow read: if isAdmin(); }
    match /{path=**}/sessions/{sessionId} { allow read: if isAdmin(); }
    match /{path=**}/quizzes/{quizId} { allow read: if isAdmin(); }
    match /{path=**}/checklists/{checklistId} { allow read: if isAdmin(); }

    match /users/{userId} {
      allow create, update, get: if request.auth != null && request.auth.uid == userId;
      allow list, read: if isAdmin();

      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if isAdmin();
      }
      match /quizzes/{quizId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if isAdmin();
      }
      match /checklists/{checklistId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read: if isAdmin();
      }
      
      match /notifications/{notificationId} {
        allow create: if isSupervisor();
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /shared_courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if isSupervisor();
    }
    
    match /bot_knowledge/{docId} {
      allow read: if request.auth != null;
      allow write: if isSupervisor();
    }
    
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
